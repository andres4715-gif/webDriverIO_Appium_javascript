{
    "compilerOptions": {
        "outDir": "./.tsbuild/",
        "sourceMap": false,
        "target": "es2019",
        "lib": ["es2019", "dom"],
        "module": "commonjs",
        "esModuleInterop": true,
        "removeComments": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/mocha-framework",
            "expect-webdriverio",
            "@wdio/sauce-service"
        ]
    },
    "include": ["./tests/**/*.ts"],
    "exclude": ["node_modules"]

}
